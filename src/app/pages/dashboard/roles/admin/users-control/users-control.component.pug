

section.section
  .section-header
    h1 Control de usuarios

  .section-body
    h2.section-title Listado de usuarios en sistema
    .row
      .col-12
        .card
          .card-header
            h4
            .card-header-form
              form
                .input-group
                  input.form-control(type="text", placeholder="Busqueda")
                  .input-group-btn
                    button.btn.btn-primary
                      i.fas.fa-search
          .card-body.p-0
            .table-responsive
              table.table.table-striped
                thead
                  tr
                    th(*ngFor="let item of this.headers") {{ item }}
                tbody
                  tr( *ngFor="let it2 of this.registros" )
                    td
                      img.rounded-circle(alt="image", src="assets/img/avatar/avatar-5.png", width="35", data-toggle="tooltip", data-original-title="Wildan Ahdian")
                    td
                      p {{ it2.name }}
                    td
                      p {{ it2.last_name }}
                    td
                      p {{ it2.edad}}
                    td
                      p {{ it2.id_card}}
                    td
                      p {{ it2.nro_fijo}}
                    td
                      p {{ it2.nro_movil}}
                    td
                      p {{ it2.email}}
                    //- td
                    //-   p {{ it2.pais}}
                    //- td
                    //-   p {{ it2.estado}}
                    //- td
                    //-   p {{ it2.ciudad}}
                    td
                      p {{ it2.rol.alias}}
                    td
                      p {{ it2.createdAt[1] }} {{ it2.createdAt[2] }}
                    td
                      p {{ it2.last_session[1] }} {{ it2.last_session[2] }}
                    td
                      .badge.badge-success {{ it2.status }}
                    td
                      a.btn.btn-primary([routerLink]="['/dashboard/infoUser', it2._id ]", routerLinkActive="active") Detalles


        app-paginator(*ngIf="( this.paginator != null ) && ( this.paginator.pageCount > 1 )", [paginator]="this.paginator", (newPageResponse)="this.newPageResponse($event)")


